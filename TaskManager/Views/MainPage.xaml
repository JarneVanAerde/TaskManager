<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TaskManager.ViewModels"
             xmlns:model="clr-namespace:TaskManager.Models"
             x:DataType="viewmodel:MainPageViewModel"
             x:Class="TaskManager.Views.MainPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="20" >

        <Grid ColumnDefinitions="250, *" ColumnSpacing="16" >

            <Entry Grid.Row="0"
                   Grid.Column="0"
                   Placeholder="Create a new TODO" />
            
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Text="Add"
                    Command="{Binding AddTodoCommand}"/>

        </Grid>

        <CollectionView ItemsSource="{Binding Todos}"
                        SelectionMode="None">

            <!-- TODO: Make an empty view spalshscreen. -->

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Todo">

                    <Frame Padding="15" Margin="0,5,0,5">
                        <Label Text="{Binding Name}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
